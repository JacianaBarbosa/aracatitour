<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewNum"
        android:layout_alignLeft="@+id/textViewNum"
        android:layout_alignStart="@+id/textViewNum"
        android:layout_marginTop="17dp"
        android:id="@+id/textViewBairro"
        android:text="Bairro" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/textViewNum"
        android:layout_below="@+id/textViewRua"
        android:layout_alignLeft="@+id/textViewRua"
        android:layout_alignStart="@+id/textViewRua"
        android:text="NÃºmero" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/textViewRua"
        android:text="Rua"
        android:layout_below="@+id/textViewNome"
        android:layout_alignLeft="@+id/textViewNome"
        android:layout_alignStart="@+id/textViewNome" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewContato"
        android:text="Contato(s):"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/textViewBairro"
        android:layout_alignLeft="@+id/textViewBairro"
        android:layout_alignStart="@+id/textViewBairro" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPhone1"
        android:text="(00) 0000 - 0000"
        android:layout_below="@+id/textViewContato"
        android:layout_alignLeft="@+id/textViewContato"
        android:layout_alignStart="@+id/textViewContato"
        android:layout_marginTop="13dp" />

    <TextView
        android:text="(11) 1111 - 1111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPhone2"
        android:layout_below="@+id/textViewPhone1"
        android:layout_alignLeft="@+id/textViewPhone1"
        android:layout_alignStart="@+id/textViewPhone1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp"
        android:id="@+id/textViewNome"
        android:text="Nome"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cast_expanded_controller_bg_gradient_light"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:id="@+id/imageView" />

</RelativeLayout>